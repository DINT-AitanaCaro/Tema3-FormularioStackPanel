<Window x:Class="Tema3_FormularioStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_FormularioStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Margin="20">
            <TextBlock Text="Nombre" FontSize="16" FontWeight="Bold" Margin="2,5,2,5"/>
            <TextBox/>
        </StackPanel>
        <StackPanel Margin="20">
            <TextBlock Text="Dirección" FontSize="16" FontWeight="Bold" Margin="2,5,2,5"/>
            <TextBox />
        </StackPanel>
        <StackPanel Margin="20">
            <TextBlock Text="Correo electrónico" FontSize="16" FontWeight="Bold" Margin="2,5,2,5"/>
            <TextBox />
        </StackPanel >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Aceptar" Width="100" Margin="5"/>
            <Button Content="Cancelar" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
